@model IEnumerable<ShopWeb.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-tables.css" />
}

<div class="admin-page-header">
    <div>
        <h1 class="admin-page-title">Orders Management</h1>
        <p class="admin-page-subtitle">Track and manage customer orders</p>
    </div>
</div>

@if (Model.Any())
{
    <div class="admin-table-container">
        <div class="admin-table-wrapper">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th><i class="fas fa-receipt"></i> Order #</th>
                        <th><i class="fas fa-user"></i> Customer</th>
                        <th><i class="fas fa-map-marker-alt"></i> Address</th>
                        <th><i class="fas fa-dollar-sign"></i> Total</th>
                        <th><i class="fas fa-info-circle"></i> Status</th>
                        <th><i class="fas fa-shopping-bag"></i> Items</th>
                        <th><i class="fas fa-cogs"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><span class="admin-order-id">#@order.Id</span></td>
                            <td>
                                <div class="admin-user-info">
                                    <span class="admin-user-name">@order.User?.FullName</span>
                                    <span class="admin-user-email">@order.User?.Email</span>
                                </div>
                            </td>
                            <td>
                                <small style="color: #a0a0a0;">@order.ShippingAddress</small>
                            </td>
                            <td><span class="admin-price">@order.TotalAmount.ToString("N0")Ä‘</span></td>
                            <td>
                                @if (order.Status == "Pending")
                                {
                                    <span class="admin-badge admin-badge-pending"><i class="fas fa-clock"></i> Pending</span>
                                }
                                else if (order.Status == "Processing")
                                {
                                    <span class="admin-badge admin-badge-processing"><i class="fas fa-cog fa-spin"></i> Processing</span>
                                }
                                else if (order.Status == "Shipped")
                                {
                                    <span class="admin-badge admin-badge-shipped"><i class="fas fa-shipping-fast"></i> Shipped</span>
                                }
                                else if (order.Status == "Delivered")
                                {
                                    <span class="admin-badge admin-badge-delivered"><i class="fas fa-check-circle"></i> Delivered</span>
                                }
                                else if (order.Status == "Cancelled")
                                {
                                    <span class="admin-badge admin-badge-cancelled"><i class="fas fa-times-circle"></i> Cancelled</span>
                                }
                                else
                                {
                                    <span class="admin-badge admin-badge-role">@order.Status</span>
                                }
                                @if (order.CancelRequested)
                                {
                                    <br />
                                    <span class="admin-badge admin-badge-alert mt-1"><i class="fas fa-exclamation-triangle"></i> Cancel Request!</span>
                                }
                            </td>
                            <td>
                                <span class="admin-items-count">
                                    <i class="fas fa-box"></i>
                                    @order.OrderDetails.Count
                                </span>
                            </td>
                            <td>
                                <div class="admin-actions">
                                    <a asp-action="Details" asp-route-id="@order.Id" class="admin-btn admin-btn-sm admin-btn-info">
                                        <i class="fas fa-eye"></i>
                                        Details
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@order.Id" method="post" class="admin-delete-form" onsubmit="return confirm('Are you sure you want to delete this order?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="admin-btn admin-btn-sm admin-btn-danger">
                                            <i class="fas fa-trash-alt"></i>
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="admin-empty-state">
        <i class="fas fa-inbox"></i>
        <p>No orders yet. Orders will appear here once customers start placing them.</p>
    </div>
}
