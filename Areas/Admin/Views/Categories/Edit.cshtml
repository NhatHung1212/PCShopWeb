@model ShopWeb.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-forms.css" />
}

<div class="admin-page-header" style="background: linear-gradient(135deg, #1a0a2e 0%, #0f051d 100%); padding: 32px; border-radius: 16px; margin-bottom: 32px; border: 1px solid #2a1a4e;">
    <div>
        <h1 class="admin-page-title" style="font-size: 32px; font-weight: 700; background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; margin-bottom: 8px;">
            <i class="fas fa-edit"></i> Edit Category
        </h1>
        <p class="admin-page-subtitle" style="font-size: 16px; color: #a0a0a0;">Update category information</p>
    </div>
    <a asp-action="Index" class="admin-btn" style="background: linear-gradient(135deg, #404040 0%, #2a2a2a 100%); color: #fff; padding: 12px 24px; border-radius: 10px; border: 1px solid #505050; font-weight: 500;">
        <i class="fas fa-arrow-left"></i> Back to Categories
    </a>
</div>

<div class="admin-form-container">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedAt" />
        
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="admin-validation-summary" style="background: linear-gradient(135deg, #3d0a0a 0%, #2a0505 100%); border: 1px solid #5a0f0f; border-radius: 12px; padding: 20px; margin-bottom: 24px;">
                <div asp-validation-summary="ModelOnly"></div>
            </div>
        }

        <div style="background: linear-gradient(135deg, #1a1a2e 0%, #0f0f1e 100%); border: 1px solid #2a2a3e; border-radius: 16px; padding: 32px; box-shadow: 0 8px 32px rgba(59, 130, 246, 0.1);">
            <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 32px; padding-bottom: 24px; border-bottom: 2px solid #2a2a3e;">
                <div style="width: 56px; height: 56px; background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%); border-radius: 14px; display: flex; align-items: center; justify-content: center; font-size: 28px;">
                    <i class="fas fa-tags"></i>
                </div>
                <h3 style="font-size: 22px; font-weight: 700; color: #fff; margin: 0;">Category Information</h3>
            </div>
            
            <div class="admin-form-group" style="margin-bottom: 24px;">
                <label asp-for="Name" class="admin-form-label" style="font-size: 14px; font-weight: 600; color: #c0c0c0; margin-bottom: 10px; display: flex; align-items: center; gap: 8px;">
                    <i class="fas fa-tag" style="color: #3b82f6;"></i> Category Name <span class="required" style="color: #ef4444;">*</span>
                </label>
                <input asp-for="Name" class="admin-form-input" placeholder="e.g., Laptops, Components, Monitors" style="background: #0a0a0a; border: 2px solid #2a2a3e; border-radius: 10px; padding: 14px 16px; color: #fff; font-size: 15px;" />
                <span asp-validation-for="Name" class="admin-validation-error"></span>
            </div>
            
            <div class="admin-form-group" style="margin-bottom: 24px;">
                <label asp-for="Description" class="admin-form-label" style="font-size: 14px; font-weight: 600; color: #c0c0c0; margin-bottom: 10px; display: flex; align-items: center; gap: 8px;">
                    <i class="fas fa-align-left" style="color: #10b981;"></i> Description
                </label>
                <textarea asp-for="Description" class="admin-form-textarea" rows="4" placeholder="Brief description of this category" style="background: #0a0a0a; border: 2px solid #2a2a3e; border-radius: 10px; padding: 14px 16px; color: #fff; font-size: 15px; line-height: 1.6; width: 100%; resize: vertical;"></textarea>
                <span asp-validation-for="Description" class="admin-validation-error"></span>
            </div>
            
            <div class="admin-form-group">
                <label asp-for="IconClass" class="admin-form-label" style="font-size: 14px; font-weight: 600; color: #c0c0c0; margin-bottom: 10px; display: flex; align-items: center; gap: 8px;">
                    <i class="fas fa-icons" style="color: #8b5cf6;"></i> Icon Class (FontAwesome)
                </label>
                <input asp-for="IconClass" class="admin-form-input" placeholder="e.g., fa-laptop, fa-desktop, fa-microchip" style="background: #0a0a0a; border: 2px solid #2a2a3e; border-radius: 10px; padding: 14px 16px; color: #fff; font-size: 15px;" />
                <small class="admin-form-help" style="color: #707070; font-size: 13px; margin-top: 8px; display: block;">
                    <i class="fas fa-info-circle"></i> Use FontAwesome icon classes (e.g., fa-laptop, fa-keyboard)
                </small>
            </div>
        </div>

        <div class="admin-form-actions" style="margin-top: 32px; display: flex; gap: 16px;">
            <button type="submit" class="admin-btn" style="background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%); color: #fff; font-size: 17px; font-weight: 600; padding: 16px 40px; border-radius: 12px; border: none; box-shadow: 0 4px 20px rgba(59, 130, 246, 0.4); cursor: pointer;">
                <i class="fas fa-save"></i>
                Save Changes
            </button>
            <a asp-action="Index" class="admin-btn" style="background: #2a2a2a; color: #fff; font-size: 16px; font-weight: 500; padding: 14px 32px; border-radius: 12px; border: 1px solid #404040;">
                <i class="fas fa-arrow-left"></i>
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
