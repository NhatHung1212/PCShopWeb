@model ShopWeb.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-forms.css" />
}

<div class="admin-page-header" style="background: linear-gradient(135deg, #1a0a2e 0%, #0f051d 100%); padding: 32px; border-radius: 16px; margin-bottom: 32px; border: 1px solid #2a1a4e;">
    <div>
        <h1 class="admin-page-title" style="font-size: 32px; font-weight: 700; background: linear-gradient(135deg, #ec4899 0%, #f97316 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; margin-bottom: 8px;">
            <i class="fas fa-edit"></i> Edit Product
        </h1>
        <p class="admin-page-subtitle" style="font-size: 16px; color: #a0a0a0;">Update product information and details</p>
    </div>
    <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="admin-btn" style="background: linear-gradient(135deg, #404040 0%, #2a2a2a 100%); color: #fff; padding: 12px 24px; border-radius: 10px; border: 1px solid #505050; font-weight: 500; transition: all 0.3s;">
        <i class="fas fa-arrow-left"></i> Back to Products
    </a>
</div>

<div class="admin-form-container">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedAt" />
        <input type="hidden" asp-for="UpdatedAt" />
        <input type="hidden" asp-for="ImageUrl" />
        
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="admin-validation-summary" style="background: linear-gradient(135deg, #3d0a0a 0%, #2a0505 100%); border: 1px solid #5a0f0f; border-radius: 12px; padding: 20px; margin-bottom: 24px;">
                <div asp-validation-summary="ModelOnly"></div>
            </div>
        }

        <!-- Creative 2-Column Layout -->
        <div class="admin-grid-2" style="gap: 24px;">
            <!-- Left: Product Details -->
            <div style="background: linear-gradient(135deg, #1a1a2e 0%, #0f0f1e 100%); border: 1px solid #2a2a3e; border-radius: 16px; padding: 28px; box-shadow: 0 8px 32px rgba(236, 72, 153, 0.1);">
                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 28px; padding-bottom: 20px; border-bottom: 2px solid #2a2a3e;">
                    <div style="width: 48px; height: 48px; background: linear-gradient(135deg, #ec4899 0%, #f97316 100%); border-radius: 12px; display: flex; align-items: center; justify-content: center; font-size: 24px;">
                        <i class="fas fa-box"></i>
                    </div>
                    <h3 style="font-size: 20px; font-weight: 700; color: #fff; margin: 0;">Product Details</h3>
                </div>
                
                <div class="admin-form-group" style="margin-bottom: 24px;">
                    <label asp-for="Name" class="admin-form-label" style="font-size: 14px; font-weight: 600; color: #c0c0c0; margin-bottom: 10px; display: flex; align-items: center; gap: 8px;">
                        <i class="fas fa-tag" style="color: #ec4899;"></i> Product Name <span class="required" style="color: #ef4444;">*</span>
                    </label>
                    <input asp-for="Name" class="admin-form-input" placeholder="Enter product name" style="background: #0a0a0a; border: 2px solid #2a2a3e; border-radius: 10px; padding: 14px 16px; color: #fff; font-size: 15px; transition: all 0.3s;" />
                    <span asp-validation-for="Name" class="admin-validation-error"></span>
                </div>

                <div class="admin-form-group" style="margin-bottom: 24px;">
                    <label asp-for="CostPrice" class="admin-form-label" style="font-size: 14px; font-weight: 600; color: #c0c0c0; margin-bottom: 10px; display: flex; align-items: center; gap: 8px;">
                        <i class="fas fa-receipt" style="color: #f59e0b;"></i> Cost Price (Giá Nhập) <span class="required" style="color: #ef4444;">*</span>
                    </label>
                    <input asp-for="CostPrice" class="admin-form-input" type="number" step="1000" placeholder="0" style="background: #0a0a0a; border: 2px solid #2a2a3e; border-radius: 10px; padding: 14px 16px; color: #fff; font-size: 15px; transition: all 0.3s;" />
                    <span asp-validation-for="CostPrice" class="admin-validation-error"></span>
                    <small class="admin-form-help" style="color: #707070; font-size: 13px; margin-top: 8px; display: block;">Giá vốn nhập hàng (VND)</small>
                </div>
                
                <div class="admin-form-group" style="margin-bottom: 24px;">
                    <label asp-for="Price" class="admin-form-label" style="font-size: 14px; font-weight: 600; color: #c0c0c0; margin-bottom: 10px; display: flex; align-items: center; gap: 8px;">
                        <i class="fas fa-dollar-sign" style="color: #10b981;"></i> Selling Price (Giá Bán) <span class="required" style="color: #ef4444;">*</span>
                    </label>
                    <input asp-for="Price" class="admin-form-input" type="number" step="1000" placeholder="0" style="background: #0a0a0a; border: 2px solid #2a2a3e; border-radius: 10px; padding: 14px 16px; color: #fff; font-size: 15px; transition: all 0.3s;" />
                    <span asp-validation-for="Price" class="admin-validation-error"></span>
                    <small class="admin-form-help" style="color: #707070; font-size: 13px; margin-top: 8px; display: block;">Giá bán ra (VND)</small>
                </div>
                
                <div class="admin-form-group" style="margin-bottom: 24px;">
                    <label asp-for="Stock" class="admin-form-label" style="font-size: 14px; font-weight: 600; color: #c0c0c0; margin-bottom: 10px; display: flex; align-items: center; gap: 8px;">
                        <i class="fas fa-warehouse" style="color: #3b82f6;"></i> Stock Quantity (Số Lượng) <span class="required" style="color: #ef4444;">*</span>
                    </label>
                    <input asp-for="Stock" class="admin-form-input" type="number" min="0" placeholder="0" style="background: #0a0a0a; border: 2px solid #2a2a3e; border-radius: 10px; padding: 14px 16px; color: #fff; font-size: 15px; transition: all 0.3s;" />
                    <span asp-validation-for="Stock" class="admin-validation-error"></span>
                    <small class="admin-form-help" style="color: #707070; font-size: 13px; margin-top: 8px; display: block;">Số lượng tồn kho</small>
                </div>
                
                <div class="admin-form-group" style="margin-bottom: 24px;">
                    <label asp-for="CategoryId" class="admin-form-label" style="font-size: 14px; font-weight: 600; color: #c0c0c0; margin-bottom: 10px; display: flex; align-items: center; gap: 8px;">
                        <i class="fas fa-tags" style="color: #8b5cf6;"></i> Category
                    </label>
                    <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="admin-form-select" style="background: #0a0a0a; border: 2px solid #2a2a3e; border-radius: 10px; padding: 14px 16px; color: #fff; font-size: 15px; width: 100%; cursor: pointer;">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="admin-validation-error"></span>
                </div>

                <div class="admin-form-group">
                    <label asp-for="Description" class="admin-form-label" style="font-size: 14px; font-weight: 600; color: #c0c0c0; margin-bottom: 10px; display: flex; align-items: center; gap: 8px;">
                        <i class="fas fa-align-left" style="color: #3b82f6;"></i> Description
                    </label>
                    <textarea asp-for="Description" class="admin-form-textarea" rows="7" placeholder="Enter product description" style="background: #0a0a0a; border: 2px solid #2a2a3e; border-radius: 10px; padding: 16px; color: #fff; font-size: 15px; line-height: 1.6; width: 100%; resize: vertical; transition: all 0.3s;"></textarea>
                    <span asp-validation-for="Description" class="admin-validation-error"></span>
                </div>
            </div>
            
            <!-- Right: Image Preview -->
            <div style="background: linear-gradient(135deg, #1a1a2e 0%, #0f0f1e 100%); border: 1px solid #2a2a3e; border-radius: 16px; padding: 28px; box-shadow: 0 8px 32px rgba(168, 85, 247, 0.1);">
                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 28px; padding-bottom: 20px; border-bottom: 2px solid #2a2a3e;">
                    <div style="width: 48px; height: 48px; background: linear-gradient(135deg, #a855f7 0%, #6366f1 100%); border-radius: 12px; display: flex; align-items: center; justify-content: center; font-size: 24px;">
                        <i class="fas fa-image"></i>
                    </div>
                    <h3 style="font-size: 20px; font-weight: 700; color: #fff; margin: 0;">Product Image</h3>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    var imagePath = Model.ImageUrl.StartsWith("images/") ? Model.ImageUrl : $"images/{Model.ImageUrl}";
                    <div style="background: #0a0a0a; border: 2px solid #2a2a3e; border-radius: 12px; padding: 16px; margin-bottom: 20px; position: relative; overflow: hidden;">
                        <img src="~/@imagePath" alt="Current image" style="width: 100%; height: 240px; object-fit: contain; border-radius: 8px;" />
                        <div style="position: absolute; top: 24px; right: 24px; background: rgba(16, 185, 129, 0.9); padding: 6px 12px; border-radius: 8px; font-size: 12px; font-weight: 600; color: #fff;">
                            <i class="fas fa-check-circle"></i> Current
                        </div>
                    </div>
                }
                else
                {
                    <div style="background: #0a0a0a; border: 2px dashed #2a2a3e; border-radius: 12px; padding: 40px; text-align: center; margin-bottom: 20px;">
                        <i class="fas fa-image" style="font-size: 48px; color: #404040; margin-bottom: 12px; display: block;"></i>
                        <p style="color: #606060; margin: 0;">No Image</p>
                    </div>
                }
                
                <div class="admin-form-group">
                    <label for="imageFile" class="admin-form-label" style="font-size: 14px; font-weight: 600; color: #c0c0c0; margin-bottom: 10px; display: flex; align-items: center; gap: 8px;">
                        <i class="fas fa-upload" style="color: #a855f7;"></i> Update Image
                    </label>
                    <div style="background: #0a0a0a; border: 2px dashed #2a2a3e; border-radius: 10px; padding: 20px; text-align: center; cursor: pointer; transition: all 0.3s;" onmouseover="this.style.borderColor='#a855f7'" onmouseout="this.style.borderColor='#2a2a3e'">
                        <input type="file" name="imageFile" id="imageFile" class="admin-file-input" accept="image/*" style="display: none;" onchange="document.getElementById('editFileLabel').textContent = this.files[0]?.name || 'Click to upload new image'" />
                        <label for="imageFile" id="editFileLabel" style="cursor: pointer; color: #a0a0a0; font-size: 14px;">
                            <i class="fas fa-cloud-upload-alt" style="font-size: 28px; color: #a855f7; display: block; margin-bottom: 8px;"></i>
                            Click to upload new image
                        </label>
                    </div>
                    <small class="admin-form-help" style="color: #707070; font-size: 13px; margin-top: 8px; display: block;">Leave empty to keep current image</small>
                </div>
            </div>
        </div>

        <div class="admin-form-actions" style="margin-top: 32px; display: flex; gap: 16px; align-items: center;">
            <button type="submit" class="admin-btn" style="background: linear-gradient(135deg, #ec4899 0%, #f97316 100%); color: #fff; font-size: 17px; font-weight: 600; padding: 16px 40px; border-radius: 12px; border: none; box-shadow: 0 4px 20px rgba(236, 72, 153, 0.4); transition: all 0.3s; cursor: pointer;">
                <i class="fas fa-save"></i>
                Save Changes
            </button>
            <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="admin-btn" style="background: #2a2a2a; color: #fff; font-size: 16px; font-weight: 500; padding: 14px 32px; border-radius: 12px; border: 1px solid #404040; transition: all 0.3s;">
                <i class="fas fa-arrow-left"></i>
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
