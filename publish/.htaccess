RewriteEngine On

# Bảo vệ các files cấu hình
<Files "appsettings.*.json">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.config">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.dll">
    Order Allow,Deny
    Deny from all
</Files>

# Chuyển hướng tất cả request đến index
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Enable error display (chỉ để debug, tắt đi khi production)
# php_flag display_errors on
# php_value error_reporting 32767
